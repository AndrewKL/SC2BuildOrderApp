<Window x:Class="SC2BOA_win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="320" LastChildFill="True" VerticalAlignment="Top" Width="517">
            <DockPanel Name="ToolsBuildPanel" DockPanel.Dock="Top"    Height="50"/>
            <DockPanel Name="SelectBuildPanel" DockPanel.Dock="Left"   Width="100" >
                <ListView x:Name="SelectBuildListView" Height="270" VerticalAlignment="Top" Width="100">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
            <DockPanel Name="DisplayBuildPanel" DockPanel.Dock="Right" >
                <RichTextBox Height="270" VerticalAlignment="Top" Width="421">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="RichTextBox"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </DockPanel>
        </DockPanel>

    </Grid>
</Window>
