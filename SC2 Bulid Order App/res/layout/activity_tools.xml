<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/AddBuildOrderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addBuildOrder"
        android:text="@string/AddBuildString" />

    <Button
        android:id="@+id/AddInitialDataButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addInitialData"
        android:text="@string/AddInitialDataString" />

    <Button
        android:id="@+id/LoadDataFromWebButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadDataFromWeb"
        android:text="@string/LoadDataFromWebString" />

    <Button
        android:id="@+id/DatabaseInformationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="displayDatabaseInformation"
        android:text="@string/DatabaseInformationString" />

    <Button
        android:id="@+id/DeleteDBButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deleteDatabase"
        android:text="@string/DeleteDBString" />

    <Button
        android:id="@+id/UploadAllBuildsToGAE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="uploadBuildsToGAE"
        android:text="@string/uploadtoGAEString" />

    <Button
        android:id="@+id/DownloadAllBuildsFromGAEButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="downloadBuildsFromGAE"
        android:text="@string/downloadallbuildsfromGAE" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="logIn"
        android:text="@string/LoginString" />

</LinearLayout>